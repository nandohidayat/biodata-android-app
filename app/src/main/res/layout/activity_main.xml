<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/nim_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-107dp"
        android:layout_marginTop="37dp"
        android:layout_toStartOf="@+id/nim_value"
        android:text="NIM :" />

    <TextView
        android:id="@+id/nim_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="107dp"
        android:layout_marginTop="46dp"
        android:text="A11.2016.09986"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/nama_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nim_tag"
        android:layout_below="@+id/nim_value"
        android:text="Nama :" />

    <TextView
        android:id="@+id/nama_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nim_value"
        android:layout_below="@+id/nama_tag"
        android:text="Muhammad Nando Hidayat"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/alamat_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nim_tag"
        android:layout_below="@+id/nama_value"
        android:text="Alamat :" />

    <TextView
        android:id="@+id/alamat_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nim_value"
        android:layout_below="@+id/alamat_tag"
        android:text="Jalan Tapak Raya RT 5 RW 3"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/telepon_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nim_tag"
        android:layout_below="@+id/alamat_value"
        android:text="Telepon :" />

    <TextView
        android:id="@+id/telepon_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nim_value"
        android:layout_below="@+id/telepon_tag"
        android:text="083842327765"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/email_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nim_tag"
        android:layout_below="@+id/telepon_value"
        android:text="Email :" />

    <TextView
        android:id="@+id/email_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nim_value"
        android:layout_below="@+id/email_tag"
        android:text="mnandohidayat@gmail.com" />

</RelativeLayout>